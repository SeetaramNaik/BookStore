@model Book.Models.Company

<form method="post" asp-action="Upsert">

    <input asp-for="@Model.Id" hidden/>
    <div class="border mt-3 p-3 row">
        <div class="pt-3 mb-3">
            <h2>@(Model.Id!=0?"Update":"Create") Company</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control w-50" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StreetAddress"></label>
            <input asp-for="@Model.StreetAddress" rows="3" class="form-control w-50" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="@Model.City"></label>
            <input asp-for="@Model.City" class="form-control w-50" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="@Model.State"></label>
            <input asp-for="@Model.State" class="form-control w-50" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="@Model.PostalCode"></label>
            <input asp-for="@Model.PostalCode" class="form-control w-50" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control w-50" />
        </div>
       
        <div class="row" style="margin-top:30px;">
            @if (@Model.Id != 0)
            {
                <button type="submit" class="btn btn-primary col-3" style="width:100px;margin-right:10px;">Update</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary col-3" style="width:100px;margin-right:10px;">Create</button>
            }
            <a asp-controller="Company" asp-action="Index" class="btn btn-warning col-2">Back to list</a>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    
}