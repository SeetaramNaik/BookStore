@model Application.Models.ViewModel.ProductVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="border mt-3 p-3 row">
        <div class="pt-3 mb-3">
            <h2>@(Model.Product.Id!=0?"Update":"Create") Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" class="form-control w-50" value="sdfdf"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Description"></label>
            <textarea asp-for="Product.Description" rows="3" class="form-control w-50" value="ffdfdfdfd"></textarea>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.ISBN"></label>
            <input asp-for="Product.ISBN" class="form-control w-50" value="fddfdd" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Author"></label>
            <input asp-for="Product.Author" class="form-control w-50" value="hsdhsdjhs" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.ListPrice"></label>
            <input asp-for="Product.ListPrice" class="form-control w-50" value="10" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control w-50" value="10" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price50"></label>
            <input asp-for="Product.Price50" class="form-control w-50" value="10" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.Price100"></label>
            <input asp-for="Product.Price100" class="form-control w-50" value="10" />
        </div>
        @* <div class="mb-3">
            <label asp-for="Product.ImageUrl"></label>
            <input type="file" id="uploadbox" name="file" asp-for="Product.ImageUrl" class="form-control w-50" />
        </div> *@
        <div class="mb-3 col-6">
            <label asp-for="Product.CategoryId"></label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select w-50">
                <option disabled selected>---Select Option---</option>
            </select>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Product.CoverTypeId"></label>
            <select asp-for="Product.CoverTypeId" asp-items="@Model.CoverTypeList" class="form-select w-50">
                <option disabled selected>---Select Option---</option>
            </select>
        </div>
        <div class="row" style="margin-top:30px;">
            @if (Model.Product.Id != 0)
            {
                <button type="submit" class="btn btn-primary col-3" style="width:100px;margin-right:10px;">Update</button>
            }
            else
            {
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary col-3" style="width:100px;margin-right:10px;">Create</button>
            }
            <a asp-controller="Product" asp-action="Index" class="btn btn-warning col-2">Back to list</a>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    <script>
        function ValidateInput() {
            if (document.getElementById("uploadbox").value = "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Please upload an Image!",
                });
                return false;
            }
            return true;
        }
    </script>
}