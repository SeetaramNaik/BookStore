@model IEnumerable<Product>

<h1>Index category</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-3 pt-3">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Create Product
            </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="25%">@obj.Title</td>
                <td width="25%">@obj.ISBN</td>
                <td width="25%">@obj.Price</td>
                <td width="25%">@obj.Author</td>
                
                <td>
                    <div class="width-175 btn-group btn btn-warning">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" style="color:#fff;text-decoration:none;">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="width-175 btn-group btn btn-danger">
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" style="color:#fff;text-decoration:none;">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>
