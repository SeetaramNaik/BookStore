@model CoverType

<form method="post">

    <div class="border mt-3 p-3">
        <div class="row pt-3 mb-3">
            <h2>Create a covertype</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control w-50"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:100px;">Create</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-warning">Back to list</a>
    </div>
</form>

